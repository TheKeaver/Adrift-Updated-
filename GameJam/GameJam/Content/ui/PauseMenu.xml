<UI>
    <Widgets>
        <Label
            halign="center"
            valign="center"
            horizontal="0"
            vertical="-25%"
            width="75%"
            height="40%"
            content="Paused"
            font="font_msdf_hyperspace"
            />
        <Button
            id="Resume"
            aboveID="Exit"
            belowID="Exit"
            defaultSelected="true"
            halign="center"
            valign="center"
            horizontal="0"
            vertical="20%"
            width="25%"
            height="10%"
            released-image="texture_ui_button_released"
            released-thickness="5,5,5,5"
            hover-image="texture_ui_button_hover"
            hover-thickness="5,5,5,5"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="5,5,5,5"
            onclick="queue:TogglePauseGameEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="75%"
                height="75%"
                content="Resume"
                font="font_msdf_hyperspace"
                />
        </Button>
        <Button
            id="Exit"
            aboveID="Resume"
            belowID="Resume"
            defaultSelected="false"
            halign="center"
            valign="center"
            horizontal="0"
            vertical="35%"
            width="25%"
            height="10%"
            released-image="texture_ui_button_released"
            released-thickness="5,5,5,5"
            hover-image="texture_ui_button_hover"
            hover-thickness="5,5,5,5"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="5,5,5,5"
            onclick="queue:UI.Pause.ExitToLobbyEvent"
            >
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="75%"
                height="75%"
                content="Exit"
                font="font_msdf_hyperspace"
                />
        </Button>
    </Widgets>
</UI>
